<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
        <%- include('_style') %>
		<title>Document</title>
	</head>
	<body>
		<div class="container pt-5">
			<h2 class="mb-1"><%= article.title %></h1>
			<div class="text-muted mb-2">
				<%= article.createAt.toLocaleDateString() %>
			</div>
			<a href="/" class="btn btn-secondary">All progress</a>
			<a href="/articles/edit/<%= article.id %>" class="btn btn-gold"
				>Edit</a
			>
			<form
				class="d-inline"
				action="/articles/<%= article.id %>?_method=DELETE"
				method="POST"
			>
				<button type="submit" class="btn btn-danger">Delete</button>
			</form>
			<div style="white-space: pre-line;"><%- article.sanitizedHtml %></div>
		</div>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
